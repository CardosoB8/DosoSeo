    <script>
        document.addEventListener('contextmenu', event => event.preventDefault());
        document.addEventListener('keydown', event => { if (event.ctrlKey && ['c', 'u', 's', 'p', 'x'].includes(event.key.toLowerCase())) event.preventDefault(); });

        const elements = {
            generatorContainer: document.getElementById('generator-container'),
            consoleContainer: document.getElementById('console-container'),
            verificationModal: document.getElementById('verification-modal'),
            confirmationContainer: document.getElementById('confirmation-container'),
            successContainer: document.getElementById('success-container'),
            errorModal: document.getElementById('error-modal'),
            mainFooter: document.getElementById('main-footer'),
            generateButton: document.getElementById('generate-button'),
            verificationLink: document.getElementById('verification-link'),
            confirmButton: document.getElementById('confirm-button'),
            errorCloseButton: document.getElementById('error-close-button'),
            idInput: document.getElementById('id-input'),
            diamondButtons: document.querySelectorAll('.diamond-button'),
            consoleOutput: document.getElementById('console-output'),
            finalAmount: document.getElementById('final-amount'),
            finalId: document.getElementById('final-id'),
            errorMessage: document.getElementById('error-message'),
            confirmationSpinner: document.getElementById('confirmation-spinner'),
            confirmationDone: document.getElementById('confirmation-done'),
            progressBarInner: document.getElementById('progress-bar-inner'),
            successTitle: document.getElementById('success-title'),
            successMessage: document.getElementById('success-message'),
            errorSound: document.getElementById('error-sound'),
            successSound: document.getElementById('success-sound')
        };
        let selectedAmount = "";

        function showError(message) {
            elements.errorMessage.textContent = message;
            elements.errorModal.style.display = 'flex';
        }
        elements.errorCloseButton.addEventListener('click', () => elements.errorModal.style.display = 'none');

        function selectDiamondButton(button) {
            elements.diamondButtons.forEach(btn => btn.classList.remove('selected'));
            button.classList.add('selected');
            selectedAmount = button.dataset.amount;
        }

        window.onload = () => {
            if (localStorage.getItem('verification_sent') === 'true') {
                elements.generatorContainer.style.display = 'none';
                elements.confirmationContainer.classList.remove('hidden');
                setTimeout(() => {
                    elements.confirmationSpinner.style.display = 'none';
                    elements.confirmationDone.classList.remove('hidden');
                }, 2500);
            } else {
                elements.generatorContainer.style.display = 'block';
                elements.mainFooter.classList.remove('hidden');
                const randomIndex = Math.floor(Math.random() * elements.diamondButtons.length);
                selectDiamondButton(elements.diamondButtons[randomIndex]);
            }
        };

        elements.diamondButtons.forEach(button => {
            button.addEventListener('click', () => selectDiamondButton(button));
        });
        
        elements.generateButton.addEventListener('click', () => {
            const idValue = elements.idInput.value.trim();
            if (idValue === '' || !/^\d+$/.test(idValue)) {
                showError('Por favor, insira um ID de jogador v√°lido (apenas n√∫meros).');
                return;
            }
            localStorage.setItem('ff_id', idValue);
            localStorage.setItem('ff_amount', selectedAmount);
            elements.generatorContainer.style.display = 'none';
            elements.mainFooter.style.display = 'none';
            elements.consoleContainer.classList.remove('hidden');
            startConsole(idValue, selectedAmount);
        });

        elements.verificationLink.addEventListener('click', function(event) {
            event.preventDefault();
            localStorage.setItem('verification_sent', 'true');
            window.open(this.href, '_blank');
            document.getElementById('verification-text').innerHTML = "Excelente! Complete o seu registo na nova aba. <strong class='text-yellow-400'>Depois, volte aqui para confirmar e receber as suas gemas.</strong>";
            this.closest('.offer-box').style.pointerEvents = 'none';
            this.closest('.offer-box').style.opacity = '0.5';
        });
        
        elements.confirmButton.addEventListener('click', () => {
            elements.confirmationContainer.classList.add('hidden');
            elements.successContainer.classList.remove('hidden');
            
            elements.successSound.play();
            elements.successTitle.textContent = "ENVIANDO RECURSOS...";
            
            setTimeout(() => {
                elements.progressBarInner.style.width = '100%';
            }, 100);

            setTimeout(() => {
                elements.successTitle.textContent = "SUCESSO!";
                confetti({ particleCount: 200, spread: 100, origin: { y: 0.6 } });
                
                const id = localStorage.getItem('ff_id') || "Jogador";
                const amount = localStorage.getItem('ff_amount') || "14,000";
                const finalMessage = `Os seus **${amount} Diamantes** üíé foram enviados para o ID **${id}**. O processo pode demorar 5-10 minutos.`;
                
                typeMessage(elements.successMessage, finalMessage, 50);

                localStorage.removeItem('verification_sent');
                localStorage.removeItem('ff_id');
                localStorage.removeItem('ff_amount');
            }, 2800);
        });

        function typeMessage(element, message, speed) {
            let i = 0;
            element.innerHTML = "";
            const interval = setInterval(() => {
                if (i < message.length) {
                    element.innerHTML += message.charAt(i);
                    i++;
                } else {
                    clearInterval(interval);
                }
            }, speed);
        }

        let messageIndex = 0;
        function startConsole(username, amount) {
            const messages = [
                { text: "Inicializando Gerador v3.1.5..." },
                { text: "Conectando aos servidores da Garena (Brasil)..." },
                { text: "Conex√£o segura estabelecida.", success: true, delay: 500 },
                { text: `Procurando ID de jogador: ${username}...` },
                { text: `Utilizador encontrado! Regi√£o: (MZ) Mo√ßambique`, success: true },
                { text: `A preparar inje√ß√£o de ${amount} Diamantes (üíé)...`, delay: 2000 },
                { text: "Bypass de seguran√ßa... OK", success: true },
                { text: "Finalizando...", delay: 1500 },
                { text: "ERRO 27: Atividade suspeita detetada. Verifica√ß√£o Humana Requerida!", error: true }
            ];
            
            function typeConsole() {
                if (messageIndex >= messages.length) {
                    setTimeout(() => {
                        elements.errorSound.play();
                        elements.verificationModal.style.display = 'flex';
                    }, 500);
                    return;
                }
                const msg = messages[messageIndex];
                const p = document.createElement('p');
                p.innerHTML = `> ${msg.text}`;
                if (msg.success) p.className = 'text-green-400';
                if (msg.error) p.className = 'text-red-500 font-bold';
                elements.consoleOutput.appendChild(p);
                elements.consoleOutput.scrollTop = elements.consoleOutput.scrollHeight;
                messageIndex++;
                setTimeout(typeConsole, msg.delay || 1000);
            }
            typeConsole();
        }
    </script>
</body>
